<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:nh="Nighthollow.Interface" editor-extension-mode="False">
    <ui:VisualElement name="Screen" class="screen">
        <ui:Style src="MainMenu.uss"/>
        <nh:MainMenu>
            <ui:VisualElement name="Main" class="main-menu">
                <ui:Label class="main-menu-text"
                          text="Welcome to Nighthollow, a massively multiplayer tower defense game."/>
                <ui:Button text="Play Tutorial"
                           name="PlayTutorial"
                           class="button"
                           display-tooltip-when-elided="true"/>
                <ui:Button text="Settings"
                           name="ShowSettings"
                           class="button"
                           display-tooltip-when-elided="true"/>
                <ui:Button text="About"
                           name="ShowAbout"
                           class="button"
                           display-tooltip-when-elided="true"/>
            </ui:VisualElement>
            <ui:VisualElement name="Settings" class="main-menu" style="display: none;">
                <ui:Label class="main-menu-text"
                          text="There aren't actually any settings yet, but not having at least three buttons in your menu just feels... wrong."/>
                <ui:Button text="Back"
                           name="GoBack"
                           class="button"
                           display-tooltip-when-elided="true"/>
            </ui:VisualElement>
            <ui:VisualElement name="About" class="main-menu" style="display: none;">
                <ui:Label class="main-menu-text"
                          text="The source code for Nighthollow is provided under the terms of the Apache License, Version 2.0."/>
                <ui:Button text="Back"
                           name="GoBack"
                           class="button"
                           display-tooltip-when-elided="true"/>
            </ui:VisualElement>
            <ui:VisualElement class="menu-title">
                <ui:Label name="MenuTitle" text="Nighthollow" class="menu-title-text"/>
            </ui:VisualElement>
        </nh:MainMenu>
    </ui:VisualElement>
</ui:UXML>
