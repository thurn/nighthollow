<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:nh="Nighthollow.Interface" editor-extension-mode="False">
    <ui:Style src="Styles/styles.uss" />
    <nh:IntroductionScreen name="IntroductionScreen" class="screen-background">
        <ui:VisualElement class="dialog" name="Dialog1" style="opacity: 0;">
            <ui:Label class="dialog-text right" text="Ekis ver Morta. Eluta ver Natha."/>
            <ui:VisualElement class="portrait ocerak"/>
        </ui:VisualElement>
        <ui:VisualElement class="dialog" name="Dialog2" style="opacity: 0;">
            <ui:Label class="dialog-text right italic" text="Ekis ver Morta. Eluta ver Natha."/>
            <ui:VisualElement class="portrait ocerak"/>
        </ui:VisualElement>
        <ui:VisualElement class="dialog" name="Dialog3" style="opacity: 0;">
            <ui:VisualElement class="portrait you"/>
            <ui:Label class="dialog-text" text="The ritual is now complete."/>
        </ui:VisualElement>
        <ui:VisualElement class="dialog" name="Dialog4" style="opacity: 0;">
            <ui:VisualElement class="portrait you"/>
            <ui:Label class="dialog-text" text="Who dares to awaken me from my thousand-year slumber?"/>
        </ui:VisualElement>
        <ui:VisualElement name="ContinueButton" class="button">
            <ui:Label text="Continue"/>
        </ui:VisualElement>
    </nh:IntroductionScreen>
</ui:UXML>